{
    "manifestVersion": 1,
    "id": "GPTPRReviewer",
    "name": "Azure OpenAI GPT PR Reviewer",
    "version": "0.0.2",
    "publisher": "arieslai",
    "galleryFlags": [
        "Public",
        "Preview"
    ],
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "This task uses OpenAI API to review and leave comments on Pull Requests",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/icon.png"        
    },
    "tags": [
        "OpenAI",
        "GPT",
        "pullRequest",
        "review"
    ],
    "files": [
        {
            "path": "GPTPullRequestReview"
        }
    ],
    "repository" : {
        "type" : "git",
        "uri" : "https://github.com/arieslai/azure-pipeline-ai-pr-review"
    },
    "content": {
        "details": {
            "path": "overview.md"
        }
    },
    "contributions": [
        {
            "id": "GPTPullRequestReview",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "GPTPullRequestReview"
            }
        }
    ]
}